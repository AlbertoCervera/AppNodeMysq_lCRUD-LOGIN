

<div class="container p-4 ">

    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                     <div class="card text-center ">
                         <div class="card-body ">
                             <a class="text-decoration-none" href="{{url}}" target="_blank">
                                 <h3 class="card-title text-uppercase">{{title}}</h3>  
                             </a>
                             <p class="m-2">{{description}}</p>
                             <p class="m-2">{{timeago created_at}}</p>
                             <a href="/links/delete/{{id}}" class="btn btn-danger"><i class="fas fa-trash-alt "></i> delete link</a>
                            <a href="/links/edit/{{id}}" class="btn btn-secondary"> <i class="fas fa-pencil-alt"></i> edit </a>
                         </div>
                     </div>
                </div>
       {{else}}
            <div class="col-md-4 mx-auto "> 
                <div class="card card-body text-center">
                    <p>no hay links</p>
                    <a class="btn btn-primary" href="/links/add">crea uno </a>
                </div>
            </div>
        {{/each}}
    </div>
</div>