<div class="container p-4">
    <h1>editando el link</h1>
    <div class="row">
        <div class="col-md-4">
           <div class="card">
            {{#each idencontrada}}
               <div class="card-body">
                   <form action="/links/edit/{{id}}" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" class="form-control " name="title" placeholder="{{title}}"  >
                        </div>

                        <div class="form-group mb-3">
                            <input type="url" name="url" class="form-control"   placeholder="{{url}}">
                        </div>

                        <div class="form-group mb-3">
                           <textarea name="description" class="form-control" placeholder="{{description}}"    rows="2"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">enviar</button>
                        </div>
                   </form>
               </div>
{{/each}}
           </div>
        </div>
    </div>
</div>